{
  "family": "backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::951873530887:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::951873530887:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "951873530887.dkr.ecr.eu-north-1.amazonaws.com/backend:latest",
      "essential": true,
      "portMappings": [
        { "containerPort": 3000, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "MY_NAME", "value": "Ahmad" },
        { "name": "DB_HOST", "value": "db" },
        { "name": "DB_USER", "value": "appuser" },
        { "name": "DB_PASSWORD", "value": "apppass" },
        { "name": "DB_NAME", "value": "namesdb" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/backend",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
