{
  "family": "db-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::951873530887:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::951873530887:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "db",
      "image": "mysql:8.1",
      "essential": true,
      "portMappings": [
        { "containerPort": 3306, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "MYSQL_ROOT_PASSWORD", "value": "rootpass" },
        { "name": "MYSQL_DATABASE", "value": "namesdb" },
        { "name": "MYSQL_USER", "value": "appuser" },
        { "name": "MYSQL_PASSWORD", "value": "apppass" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/db",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
